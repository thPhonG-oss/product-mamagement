mixin alert-success(time, success)
    - if(success)
    .message.info 
        div(
            class="alert alert-success position-relative"
            show-alert
            date-time="5000"
        )   #{success}
            <button close-alert type="button" class="close-alert btn-close position-absolute top-0 end-0" aria-label="Close"></button>