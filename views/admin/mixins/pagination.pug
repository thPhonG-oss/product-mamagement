mixin pagination(pagination)
    .nav 
        ul(class="pagination")
            li(class="page-item")
                button(class="page-link" button-pagination=pagination.currentPage-1 ) Previous
            - for(var i = 1; i <= pagination.totalPage; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(class="page-link" button-pagination=i) #{i}
            li(class="page-item")   
                button(class="page-link next-btn" button-pagination=pagination.currentPage+1) Next 